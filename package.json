{
  "name": "neutron",
  "version": "1.0.0",
  "description": "Electron Update Server",
  "repository": {
    "url": "https://github.com/jubianchi/neutron"
  },
  "main": "src/server.js",
  "scripts": {
    "start_old": "NEUTRON_ADMIN_TOKEN=adminToken NEUTRON_PID_FILE=pid node index.js",
    "start": "node index.js",
    "stop": "kill $(cat pid) && rm -rf pid",
    "test": "npm run lint && npm run specs && npm run features",
    "specs": "mocha --compilers js:babel-register --recursive test/specs",
    "prefeatures": "npm start >/dev/null & sleep 10 && mkdir -p updates",
    "features": "cucumber-js test/features",
    "postfeatures": "npm stop && rm -rf updates",
    "build": "babel -d compiled lib/",
    "changelog": "conventional-changelog -i CHANGELOG.md -w -r 0 -p angular",
    "lint": "eslint ./lib ./test ./index.js"
  },
  "license": "MIT",
  "dependencies": {
    "babel-polyfill": "^6.3.14",
    "babel-preset-es2015": "^6.3.13",
    "babel-preset-stage-0": "^6.3.13",
    "babel-register": "^6.4.3",
    "boom": "^3.1.2",
    "co-multipart": "^2.0.0",
    "conventional-changelog": "^0.5.3",
    "koa": "^1.1.2",
    "koa-bodyparser": "^2.0.1",
    "koa-json": "^1.1.1",
    "koa-logger": "^1.3.0",
    "koa-router": "^5.3.0",
    "koa-send": "^3.1.0",
    "moment": "^2.10.6",
    "pkgcloud": "^1.2.0-alpha.0",
    "q": "^1.4.1",
    "request-promise": "^2.0.0",
    "rmdir": "^1.2.0",
    "semver": "^5.0.3"
  },
  "devDependencies": {
    "babel-cli": "^6.4.5",
    "babel-eslint": "^4.1.8",
    "cucumber": "^0.9.2",
    "eslint": "^1.0.0",
    "eslint-plugin-babel": "^3.1.0",
    "eslint-plugin-promise": "^1.0.8",
    "eslint-plugin-standard": "^1.3.1",
    "expect": "^1.13.4",
    "jsonschema": "^1.0.3",
    "mocha": "^2.3.4",
    "webdriverio": "^3.4.0"
  }
}
